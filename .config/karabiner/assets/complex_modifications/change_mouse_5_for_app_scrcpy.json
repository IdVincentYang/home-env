{
  "title": "For App [scrcpy] change Mouse [5: CTRL_Mouse1]",
  "rules": [
    {
      "description": "Mouse 5 to CTRL + Mouse1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "pointing_button": "button1",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "/usr/local/bin/scrcpy"
              ]
            }
          ]
        }
      ]
    }
  ]
}